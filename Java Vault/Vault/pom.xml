        </dependency>

        <!-- local .jar files -->
        <dependency>
            <groupId>com.ericbt</groupId>
            <artifactId>Vault3.CommonCode</artifactId>
            <version>1.0.1</version>
        </dependency>
    </dependencies>
</project>